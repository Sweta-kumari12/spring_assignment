<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
<bean id="QuestionMap" class="com.assignment.question2.QuestionMap">
   <property name="questionId" value="3" />
   <property name="question" value="What is the largest planet in our solar system?" />
   <property name="answers">
      <map>
         <entry key="1" value="Jupiter" />
         <entry key="2" value="Saturn" />
         <entry key="3" value="Uranus" />
         <entry key="4" value="Neptune" />
      </map>
   </property>
</bean>
</beans>